{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://simtutor.dev/schemas/v1/event.schema.json",
  "title": "Event v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "event_id", "timestamp", "kind", "payload"],
  "properties": {
    "version": { "type": "string", "const": "v1" },
    "event_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "kind": {
      "type": "string",
      "enum": [
        "observation",
        "tutor_request",
        "tutor_response",
        "score",
        "system",
        "custom",
        "ui.highlight_requested",
        "ui.highlight_ack",
        "ui.clear_requested",
        "ui.clear_ack",
        "ui.user_clicked",
        "ui.card_rendered",
        "step_activated",
        "step_completed",
        "step_blocked",
        "overlay_requested",
        "overlay_applied",
        "overlay_failed",
        "capabilities_negotiated"
      ]
    },
    "t_wall": { "type": ["number", "null"] },
    "session_id": { "type": ["string", "null"] },
    "related_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Links to Observation/TutorRequest/TutorResponse for tracing"
    },
    "payload": { "type": "object", "description": "Envelope contents; validated separately if desired" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "metadata": { "type": "object", "description": "Transport or routing metadata" }
  }
}
